<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:JhoelSuarezPruebaProg2.ViewModels"
             x:Class="JhoelSuarezPruebaProg2.Views.Civil"
             Title="Civil"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ContentPage.BindingContext>
        <vm:CivilViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Label Text="Ingrese si es Casado" Style="{StaticResource SubtitleLabel}" />
        <Editor Text="{Binding Casado}" Placeholder="Ingrese si es Casado" Style="{StaticResource InputEditor}" />

        <Label Text="Ingrese cantidad de Hijos" Style="{StaticResource SubtitleLabel}" />
        <Editor Text="{Binding Hijos}" Placeholder="Ingrese cantidad de Hijos" Style="{StaticResource InputEditor}" />

        <!-- Utilizamos el binding del comando en vez del evento Clicked -->
        <Button Text="Guardar" Style="{StaticResource PrimaryButton}" Command="{Binding GuardarCommand}" />
    </VerticalStackLayout>
</ContentPage>
