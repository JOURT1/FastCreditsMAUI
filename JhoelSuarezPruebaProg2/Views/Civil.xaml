<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JhoelSuarezPruebaProg2.Views.Civil"
             Title="Civil"
             BackgroundColor="{StaticResource BackgroundColor}">
    <VerticalStackLayout>
        <Label Text="Ingrese si es Casado" Style="{StaticResource SubtitleLabel}" />
        <Editor x:Name="Editor_Casado" Placeholder="Ingrese si es Casado" Style="{StaticResource InputEditor}" />

        <Label Text="Ingrese cantidad de Hijos" Style="{StaticResource SubtitleLabel}" />
        <Editor x:Name="Editor_Hijos" Placeholder="Ingrese cantidad de Hijos" Style="{StaticResource InputEditor}" />

        <Button x:Name="JSuarez_btn_Recargar" Text="Guardar" Style="{StaticResource PrimaryButton}" Clicked="JSuarez_btn_Recargar_Clicked" />
    </VerticalStackLayout>
</ContentPage>
